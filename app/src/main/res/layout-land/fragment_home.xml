<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeFragment"

    >


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="11dp"
        android:layout_weight="1"

        >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:src="@drawable/music_jruhe2" />

        <Button
            android:id="@+id/buttonToMusic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent" />

    </FrameLayout>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="21.5dp"
        android:layout_marginRight="21.5dp"
        android:layout_weight="1"

        >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:src="@drawable/video_jruhe2" />

        <Button
            android:id="@+id/buttonToVideo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent" />

    </FrameLayout>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="32dp"
        android:layout_weight="1">


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/photo_jruhe2" />

        <Button
            android:id="@+id/buttonToPhotos"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent" />

    </FrameLayout>


</LinearLayout>